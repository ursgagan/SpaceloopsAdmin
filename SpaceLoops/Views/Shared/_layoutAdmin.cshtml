    <script>


        $(document).ready(function () {

            var currentUrl = window.location.pathname;

            // Loop through each anchor tag and compare its href attribute with the current URL
            $("ul.sidebar-menu li").each(function () {
                var link = $(this).find("a").attr("href");

                // Check if the current URL matches the anchor tag's href attribute
                if (currentUrl === link) {
                    $(this).addClass("active"); // Add the "active" class to the corresponding <li> element
                }
            });


            // Make an AJAX call to retrieve the user's profile data, including the image data
            $.ajax({
                url: '/Address/GetUserData', // Replace this with your actual endpoint to retrieve user profile data
                type: 'GET',
                success: function (response) {
                    debugger;
                    if (response)
                    {
                        if (response.imageData != null) {
                        $('#ProfileImage').attr('src', 'data:image/jpeg;base64,' + response.imageData);
                        }
                        else {                         
                            $('#ProfileImage').attr('src', '/admintemplate/img/NoProfileImage.jpg');

                        }
                        $('#ProfileName').text(response.firstName + ' ' + response.lastName);

                        $('#PName').text(response.firstName + ' ' + response.lastName);
                     }
