                function GetStatesByCountryId(selectedCountryId) {
                    $.ajax({
                        url: '/Address/GetStatesByCountryId', // Replace with your actual controller and action method
                        type: 'GET',
                        data: { countryId: selectedCountryId },
                        success: function (data) {
                            debugger
