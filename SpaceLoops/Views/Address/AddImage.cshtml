@{
    Layout = "_layoutAdmin";
}
<section class="section">
    <h1 class="section-header">
        <div>
            Add Image
        </div>
    </h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">

                <div class="card card-primary">
                    <div class="card-header">
                        <h4>
                            <div>
                                Add Image
                            </div>
                        </h4>
                    </div>
                    <div class="card-body">
                        <form action="/Address/AddImage" method="post">
                            <input id="Id" class="form-control" name="Id" type="hidden" autofocus>
                            <input id="hdncountryId" class="form-control" name="hdncountryId" type="hidden">
                            <input id="hdnStateId" class="form-control" name="hdnStateId" type="hidden">
                            <input id="hdnCityId" class="form-control" name="hdnCityId" type="hidden">
                            <input type="hidden" id="hdnTempData" value="@TempData["SuccessMessage"]" />
                            <input type="hidden" id="TempExistData" value="@TempData["AlreadyExistMessage"]" />
                            <div class="row">
                                <div class="form-group col-6">
                                    <label for="ImageName">Image Name</label>
                                    <input id="ImageName" type="text" class="form-control" name="ImageName" required>
                                </div>
                            </div>
                          

                            <div class="form-group">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <button type="submit" class="btn btn-primary btn-block" style="width: fit-content;">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</section>