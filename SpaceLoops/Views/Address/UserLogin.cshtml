<link rel="stylesheet" href="~/admintemplate/modules/toastr/build/toastr.min.css" />
<section class="section">
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">

                <div class="card card-primary">
                    <div class="card-header">
                        <h4>
                            <div>
                                Login
                            </div>
                        </h4>
                    </div>
                    <div class="card-body">
                        <form action="/Address/UserLogin" method="post">
                           @*  <input id="Id" class="form-control" name="Id" value="@Model.Id" type="hidden" autofocus> *@
                            <input type="hidden" id="hdnTempData" value="@TempData["SuccessMessage"]" />
                            <input type="hidden" id="hdnResetPwdData" value="@TempData["PasswordResetMessage"]" />
                            <input type="hidden" id="hdnIncorrectPwd" value="@TempData["PasswordIncorrectMessage"]" />

                            <div class="row">
                                <div class="form-group col-6">
                                    <label for="EmailId">EmailId</label>
                                    <input id="EmailId" type="text" class="form-control" name="EmailId" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-6">
                                    <label for="Password">Password</label>
                                    <input id="Password" type="password" class="form-control" name="Password" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <button type="submit" class="btn btn-primary btn-block" style="width: fit-content;">
                                            Login
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <script src="~/admintemplate/js/jquery-3.6.4.min.js"></script>
                            <script src="~/admintemplate/modules/toastr/build/toastr.min.js"></script>
                            <script>
                                $(document).ready(function () {

                                   
                                    if ($("#hdnResetPwdData").val() != null && $("#hdnResetPwdData").val() != '') {
                                        debugger;
                                        toastr.success("Password Reset", "Password Reset Succcessfull");
                                    }

                                    if ($("#hdnIncorrectPwd").val() != null && $("#hdnIncorrectPwd").val() != '') {
                                        debugger;
                                        toastr.error("Password is Incorrect", "Login Failed");
                                    }
                                }
                                );
                            </script>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</section>


