@{
    Layout = "_layoutAdmin";
}

@model SpaceLoops.DAL.Entities.Country

<section class="section">
    <h1 class="section-header">
        <div>
            @if (Model.Id != null && Model.Id != Guid.Empty)
            {
                <span>Edit Country</span>
            }
            else
            {
                <span>Add Country</span>
            }
        </div>
    </h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">

                <div class="card card-primary">
                    <div class="card-header">
                        <h4>
                            <div>
                                @if (Model.Id != null && Model.Id != Guid.Empty)
                                {
                                    <span>Edit Country</span>
                                }
                                else
                                {
                                    <span>Add Country</span>
                                }
                            </div>
                        </h4>
                    </div>

                    <div class="card-body">

                        <form action="/Address/AddCountry" method="POST">
                            <input id="Id" class="form-control" name="Id" value="@Model.Id" type="hidden" autofocus>
                            <input type="hidden" id="hdnTempData" value="@TempData["SuccessMessage"]" />
                            <input type="hidden" id="hiddenTempData" value="@TempData["UpdateMessage"]" />
                            <div class="row">
                                <div class="form-group col-6">
                                    <label for="CountryName">Country Name</label>
                                    <input id="CountryName" type="text" class="form-control" name="CountryName" value="@Model.CountryName" autofocus>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <button type="submit" class="btn btn-primary btn-block" style="width: fit-content;">
                                            Submit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <script src="~/admintemplate/js/jquery-3.6.4.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
            <script src="~/js/addcountry.js"></script>
        </div>
    </div>
</section>
